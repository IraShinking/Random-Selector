/* pages/list/list.wxss */

page {
  background: #fff;
  display: flex;
  flex-direction: column;
}
/*列表名所在box*/
.list_name_box
{
  display: flex;
  justify-content: space-between;/*叠加样式之后，flex布局的这条失效了*/
  border-bottom: 1px solid #efefef;
}
.list_item_name_box
{
  border-bottom: 0.5px dashed #efefef;
}
.list_box_text
{
  flex:1;
  align-items: center;
}
/*图标样式*/
.icon
{
  width: 50rpx;
  height:50rpx;
  margin-right: 50rpx;
}
.changemovenow {
  width: 100%;
  height: 60px !important;
}
.itemTransition
{
  transition:transform 0.3s;
}


